{% extends 'MauticCoreBundle:Default:content.html.twig' %}
{% block headerTitle%}{% trans %}mautic.report.reports{% endtrans %}{% endblock %}
{% block mauticContent %}report{% endblock %}
{% block actions %}
    {{- include(
        'MauticCoreBundle:Helper:page_actions.html.twig',
        {
            'templateButtons': {
                'new': permissions['report:reports:create'],
            },
            'routeBase': 'report',
            'langVar': 'report.report',
        }
    )}}
{% endblock %}
{% block content %}
<div class="panel panel-default bdr-t-wdh-0 mb-0">
    {{- include(
        'MauticCoreBundle:Helper:list_toolbar.html.twig',
        {
            'searchValue': searchValue,
            'searchHelp': 'mautic.report.report.help.searchcommands',
            'action': currentRoute,
        }
    )}}
    <div class="page-list">
        {{ slot('_content') }}
    </div>
</div>
{% endblock %}